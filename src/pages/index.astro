---
import BlogPostsLink from '../components/BlogPostsLink.astro'
import Event from '../components/Event.astro'
import Hero from '../components/Hero.astro'
import PostDate from '../components/PostDate.astro'
import PostExcerpt from '../components/PostExcerpt.astro'
import PostFeaturedImage from '../components/PostFeaturedImage.astro'
import PostTitle from '../components/PostTitle.astro'
import { Conferences } from '../data/data'
import Layout from '../layouts/Layout.astro'
import MascotPeek from '../components/MascotPeek.astro'
import { getPostLink } from '../lib/blog-helpers'
import { getPosts } from '../lib/notion/client'
import type { Conference } from '../types/conference'

// 最新の3件のブログ記事を取得
const latestPosts = await getPosts(3)

// 最新のイベント（status == 'registered'）を取得
const latestEvents = Conferences?.filter(
  (conference) => conference.status == 'registered',
) || []
---

<Layout title="CloudNative Days" description="CloudNative Days はコミュニティ、企業、技術者が一堂に会し、クラウドネイティブムーブメントを牽引することを目的としたテックカンファレンスです。" ogImage="/favicon.svg" isTopPage={true}>
  <main>
    <Hero title="CloudNative Days">
      <div class="max-w-3xl mx-auto">
        <p class="mt-4 text-xl text-black leading-relaxed">
          CloudNative Days はコミュニティ、企業、技術者が一堂に会し、<br class="hidden md:inline" />
          クラウドネイティブムーブメントを牽引することを目的とした<br class="hidden md:inline" />
          テックカンファレンスです。
        </p>
        <p class="mt-4 text-xl text-black leading-relaxed">
          最新の活用事例や先進的なアーキテクチャを学べるのはもちろん、<br class="hidden md:inline" />
          ナレッジの共有やディスカッションの場を通じて<br class="hidden md:inline" />
          登壇者と参加者、参加者同士の繋がりを深め、<br class="hidden md:inline" />
          初心者から熟練者までが共に成長できる機会を提供します。
        </p>
        <p class="mt-4 text-xl text-black leading-relaxed">
          皆様がクラウドネイティブ技術を適切に選択し、活用し、<br class="hidden md:inline" />
          次のステップに進む手助けになることを願っています。
        </p>
        <p class="mt-6 text-xl text-black font-medium">
          クラウドネイティブで、未来を共に創造しましょう。
        </p>
      </div>
    </Hero>

    {latestEvents.length > 0 && (
      <section class="py-24 backdrop-blur-sm">
        <div class="container mx-auto px-4">
          <h2 class="text-black relative px-4 text-4xl font-bold mb-16 text-center">
            最新のイベント
          </h2>
          <div class="relative">
            <div class="flex flex-col gap-20">
              {
                latestEvents.map((conference, index) => {
                  const url = `https://event.cloudnativedays.jp/${conference.abbr}`
                  const eventDays = conference.conferenceDays
                    .filter((day) => !day.internal)
                    .map((day) => day.date)
                    .join(',')
                  return (
                    <a href={url} class="block group">
                      <Event
                        name={conference.name}
                        days={eventDays}
                        img={conference.image}
                        theme={conference.theme}
                        about={conference.about}
                        align={index % 2 === 0 ? 'left' : 'right'}
                      />
                    </a>
                  )
                })
              }
            </div>
          </div>
        </div>
      </section>
    )}
    
    <section class="py-24">
      <div class="container mx-auto px-4">
        <h2 class="text-black relative px-4 text-4xl font-bold mb-16 text-center">
          最新ブログ
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {
            latestPosts.map((post) => (
              <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl hover:scale-[1.02] transition-all duration-300 card-hover">
                <a href={getPostLink(post.Slug)} class="block">
                  <div class="relative h-48 overflow-hidden">
                    {post.FeaturedImage ? (
                      <PostFeaturedImage post={post} />
                    ) : (
                      <div class="bg-gradient-to-r from-blue-500 to-purple-600 h-full flex items-center justify-center">
                        <span class="text-white text-4xl">
                          {post.Icon && post.Icon.Type === 'emoji' && 'Emoji' in post.Icon 
                            ? post.Icon.Emoji 
                            : '📝'}
                        </span>
                      </div>
                    )}
                  </div>
                  <div class="p-5">
                    <div class="text-sm text-gray-500 mb-2">
                      <PostDate post={post} />
                    </div>
                    <h3 class="text-xl font-semibold mb-3 text-gray-800 line-clamp-2">
                      {post.Title}
                    </h3>
                    <div class="text-gray-600 line-clamp-3">
                      <PostExcerpt post={post} />
                    </div>
                  </div>
                </a>
              </div>
            ))
          }
        </div>
        <div class="mt-8 text-center">
          <a href="/posts" class="inline-block px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 hover:scale-105 transition-all duration-300">
            ブログ記事一覧を見る
          </a>
        </div>
      </div>
    </section>
    
    <section class="py-24 ">
      <div class="container mx-auto px-4">
        <h2 class="text-black relative px-4 text-4xl font-bold mb-16 text-center">
          過去のイベント
        </h2>
        <div class="relative">
          <div class="flex flex-col gap-20">
            {
              Conferences?.filter(
                (conference) => conference.status == 'archived' || conference.status == 'migrated',
              )
                .sort((first, second) => second.id - first.id)
                .map((conference, index) => {
                  const url = `/${conference.abbr}`
                  const eventDays = conference.conferenceDays
                    .filter((day) => !day.internal)
                    .map((day) => day.date)
                    .join(',')
                  return (
                    <a href={url} class="block group">
                      <Event
                        name={conference.name}
                        days={eventDays}
                        img={conference.image}
                        theme={conference.theme}
                        about={conference.about}
                        align={index % 2 === 0 ? 'left' : 'right'}
                      />
                    </a>
                  )
                })
            }
          </div>
        </div>
        <div class="mt-12 text-center">
          <a href="/history" class="inline-block px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 hover:scale-105 transition-all duration-300">
            CloudNative Daysの歩みを見る
          </a>
        </div>
      </div>
    </section>

    <!-- マスコットのひょっこり -->
    <a href="/mascots">
      <MascotPeek character="toge" position="right" />
    </a>
  </main>
</Layout>

<style>
  /* line-clampユーティリティクラス */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  /* カスタムのホバーエフェクト強化 */
  .card-hover {
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
  }
  
  .card-hover:hover {
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 8px 10px -6px rgba(0, 0, 0, 0.1);
    transform: translateY(-4px);
  }
</style>

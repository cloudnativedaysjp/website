---
interface Props {
	en_name?: string;
	ja_name?: string;
	nickname?: string;
	title?: string;
	tagline?: string;
	align?: 'start' | 'center';
}

const { align = 'center', tagline, en_name, ja_name, nickname, title } = Astro.props;
---

<header class:list={['hero stack gap-4', align]}>
	<div class="stack gap-2">
		{en_name && <h1 class="text-5xl">{en_name}</h1>}
		{title && <h1 class="text-5xl">{title}</h1>}
		{ja_name && <h2 class="text-5xl">{ja_name}</h2>}
		{nickname && <h2 class="text-5xl ">@{nickname}</h2>}
		{tagline && <p class="tagline">{tagline}</p>}
	</div>
	<slot />
</header>

<style>
	.hero {
		font-size: var(--text-md);
		text-align: center;
	}

	@media (min-width: 50em) {
		.hero {
			font-size: var(--text-lg);
		}

		.start {
			text-align: start;
		}

		.start .title,
		.start .tagline {
			margin-inline: unset;
		}

		.title {
			font-size: var(--text-4xl);
		}
	}
</style>

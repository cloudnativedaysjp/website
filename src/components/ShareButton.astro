---
interface Props {
  title: string
  url: string
}

const { title, url } = Astro.props
---

<a
  href="https://twitter.com/share?ref_src=twsrc%5Etfw"
  class="twitter-share-button"
  data-text={title}
  data-url={url}
  data-show-count="false"
>
  Tweet
</a>
<script is:inline async src="https://platform.twitter.com/widgets.js"></script>
